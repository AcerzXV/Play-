<?xml version="1.0" encoding="UTF-8"?>
<project name="module_build_android" default="compile.module.build_android">
  <dirname property="module.build_android.basedir" file="${ant.file.module_build_android}"/>
  
  <property name="module.jdk.home.build_android" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.build_android" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.build_android" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.build_android" value="-encoding windows-1252 -source 8 ${compiler.args}"/>
  
  <property name="build_android.output.dir" value="${module.build_android.basedir}/../out/production/build_android"/>
  <property name="build_android.testoutput.dir" value="${module.build_android.basedir}/../out/test/build_android"/>
  
  <path id="build_android.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="build_android.module.production.classpath">
    <path refid="${module.jdk.classpath.build_android}"/>
  </path>
  
  <path id="build_android.runtime.production.module.classpath">
    <pathelement location="${build_android.output.dir}"/>
  </path>
  
  <path id="build_android.module.classpath">
    <path refid="${module.jdk.classpath.build_android}"/>
    <pathelement location="${build_android.output.dir}"/>
  </path>
  
  <path id="build_android.runtime.module.classpath">
    <pathelement location="${build_android.testoutput.dir}"/>
    <pathelement location="${build_android.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.build_android">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.build_android">
    <patternset refid="excluded.from.module.build_android"/>
  </patternset>
  
  <path id="build_android.module.sourcepath">
    <dirset dir="${module.build_android.basedir}">
      <include name="gen"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.build_android" depends="compile.module.build_android.production,compile.module.build_android.tests" description="Compile module build_android"/>
  
  <target name="compile.module.build_android.production" depends="register.custom.compilers" description="Compile module build_android; production classes">
    <mkdir dir="${build_android.output.dir}"/>
    <javac2 destdir="${build_android.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.build_android}/javac">
      <compilerarg line="${compiler.args.build_android}"/>
      <bootclasspath refid="build_android.module.bootclasspath"/>
      <classpath refid="build_android.module.production.classpath"/>
      <src refid="build_android.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.build_android"/>
    </javac2>
    
    <copy todir="${build_android.output.dir}">
      <fileset dir="${module.build_android.basedir}/gen">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.build_android.tests" depends="register.custom.compilers,compile.module.build_android.production" description="compile module build_android; test classes" unless="skip.tests"/>
  
  <target name="clean.module.build_android" description="cleanup module">
    <delete dir="${build_android.output.dir}"/>
    <delete dir="${build_android.testoutput.dir}"/>
  </target>
</project>